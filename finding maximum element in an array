another method same but different some what*/


import java.util.*;
public class HelloWorld{

     public static void main(String []args){
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int[] array = new int[n];
         int high = array[0];
        for(int p=0;p<n;p++){
            array[p] = sc.nextInt();
        }
        for(int i=1;i<n-1;i++){
            int j=i+1;
            if(high<array[j]){
            high = array[j];

            }
        }
      System.out.println(high);
     }
     }
